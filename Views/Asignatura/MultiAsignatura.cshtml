@model IEnumerable<Asignatura>

@{
    ViewData["Title"] = "Información Asignatura";
    Layout= "Simple"; //Va a buscar en Shared Simple.cshtml
}

<h1>Asignaturas</h1>
<table class="table table-dark table-hover">
  <thead>
    <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Id</th>
        <th scope="col">Curso</th>
        <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var obj in Model)
    {
        <tr>
            <td>@obj.Nombre</td>
            <td>@obj.Id</td>
            <td>@obj.Curso.Nombre</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id=obj.Id })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id=obj.Id })</td>
        </tr>
    }
  </tbody>
</table>


