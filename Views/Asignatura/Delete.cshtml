@model Asignatura

@{
    ViewData["Title"] = "Borrado de Asignatura";
    Layout= "Simple";
}

<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" disabled="disabled"></label>
    </div>
    <div>
        <label asp-for="Curso"></label>
        @Html.DropDownListFor(m => m.CursoId, new SelectList(@ViewBag.Cursos, "Id", "Nombre"), "Seleccione el Curso...", new { @disabled = "disabled" })
    </div>
    <input type="submit" value="Borrar" />
</form>